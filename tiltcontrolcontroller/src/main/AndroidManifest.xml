<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikedg.android.tiltcontrolcontroller" >

    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- Connection to Glass -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- Connection to Glass -->
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" /> <!-- Connection to Glass -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Connection to Glass -->
    <uses-permission android:name="android.permission.GET_TASKS" /> <!-- Helps figure out if MYGLASS is running -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".ControllerService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".DiagnosticActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>
