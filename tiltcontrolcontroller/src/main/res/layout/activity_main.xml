<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.mikedg.android.tiltcontrolcontroller.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_inset"
        android:paddingTop="@dimen/card_inset"
        android:paddingBottom="@dimen/card_inset"
        android:layout_marginTop="@dimen/card_inset"
        android:layout_marginLeft="@dimen/card_inset"
        android:layout_marginRight="@dimen/card_inset"
        android:gravity="left"
        android:background="@color/card_background"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="User Guide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/card_inset"
        android:layout_marginRight="@dimen/card_inset"
        android:layout_weight="1"
        android:background="@color/card_background"
        android:layout_marginBottom="@dimen/card_inset"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/main_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ViewPager Scroller"/> -->

        <com.viewpagerindicator.UnderlinePageIndicator
            android:id="@+id/pager_indicator"
            android:layout_height="6dp"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_inset"
        android:layout_marginRight="@dimen/card_inset"
        android:layout_marginBottom="@dimen/card_inset"
        android:background="@color/card_background"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_MyGlass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_inset"
            android:layout_marginRight="@dimen/card_inset"
            android:layout_marginTop="@dimen/card_inset"
            android:onClick="onClick_startMyGlass"
            android:text="Configure MyGlass" />

        <Button
            android:id="@+id/button_EnableTilt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_inset"
            android:layout_marginRight="@dimen/card_inset"
            android:layout_marginBottom="@dimen/card_inset"
            android:onClick="onClick_start"
            android:text="Enable Tilt Control" />

    </LinearLayout>



</LinearLayout>